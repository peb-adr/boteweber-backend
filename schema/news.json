{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://boteweber.de/news.json",
    "type": "object",
    "title": "news",
    "default": {},
    "examples": [
        {
            "id": 1,
            "message": "<p>Message</p>",
            "timestamp": "Tue, 29 May 2012 19:30:03 GMT",
            "title": "<p>Title</p>",
            "priority": 1
        }
    ],
    "required": [
        "title",
        "message",
        "timestamp",
        "priority"
    ],
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "id"
        },
        "title": {
            "$id": "#/properties/title",
            "type": "string",
            "title": "title"
        },
        "message": {
            "$id": "#/properties/message",
            "type": "string",
            "title": "message"
        },
        "timestamp": {
            "$id": "#/properties/timestamp",
            "type": "string",
            "format": "date-time",
            "title": "timestamp"
        },
        "priority": {
            "$id": "#/properties/priority",
            "type": "integer",
            "title": "priority"
        }
    },
    "additionalProperties": false
}
